{
    "name": "expace/pdf-invoice",
    "description": "Librairie pour générer des devis et factures en PDF",
    "type": "library",
    "license": "GPL-2.0-or-later",
    "keywords": ["devis", "factures", "pdr", "expace"],
    "support": {
        "source": "https://github.com/expace-dev/pdf-invoice"
    },
    "authors": [
        {
            "name": "Expace Development",
            "homepage": "https://github.com/expace-dev"
        }
    ],
    "require": {
        "php": ">=5.6",
        "ext-iconv": "*",
        "ext-mbstring": "*",
        "setasign/fpdf": "~1.8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.0"
    },
    "autoload": {
        "psr-4": { "Konekt\\PdfInvoice\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": {
            "Konekt\\PdfInvoice\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.6-dev"
        }
    }
}
